<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-4 sm:py-10 px-3 sm:px-0">
  <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden">
    <% if @profile %>
      <!-- Header Section -->
      <div class="bg-blue-700 text-white p-5 sm:p-8">
        <div class="flex justify-between items-start">
          <div>
            <h1 class="text-2xl sm:text-4xl font-bold"><%= @profile.name %></h1>
            <p class="text-lg sm:text-xl mt-2 text-blue-100"><%= @profile.title %></p>
          </div>
        </div>
        
        <div class="mt-3 sm:mt-4 flex flex-wrap items-center text-blue-100">
          <% if @profile.email.present? %>
            <div class="flex items-center mr-4 sm:mr-6 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 mr-1 sm:mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-sm sm:text-base"><%= @profile.email %></span>
            </div>
          <% end %>
          <% if @profile.phone.present? %>
            <div class="flex items-center mr-4 sm:mr-6 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 mr-1 sm:mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm sm:text-base"><%= @profile.phone %></span>
            </div>
          <% end %>
          <% if @profile.linkedin.present? %>
            <div class="flex items-center mr-4 sm:mr-6 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 mr-1 sm:mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              <span class="text-sm sm:text-base">LinkedIn</span>
            </div>
          <% end %>
          <% if @profile.github.present? %>
            <div class="flex items-center mr-4 sm:mr-6 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 mr-1 sm:mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span class="text-sm sm:text-base">GitHub</span>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Main Content -->
      <div class="p-5 sm:p-8">
        <!-- Interactive Mode Link -->
        <div class="mb-5 sm:mb-6 text-center">
          <a href="/" class="inline-flex items-center px-3 py-2 sm:px-4 sm:py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 mr-1 sm:mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
            Open Interactive Mode with AI Assistant
          </a>
        </div>
        
        <!-- Profile Summary -->
        <section class="mb-8 sm:mb-10">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-800 border-b-2 border-blue-200 pb-2 mb-3 sm:mb-4">Profile</h2>
          <div class="text-sm sm:text-base text-gray-700 leading-relaxed">
            <%= simple_format(@profile.summary) %>
          </div>
        </section>

        <!-- Work Experience -->
        <section class="mb-8 sm:mb-10">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-800 border-b-2 border-blue-200 pb-2 mb-3 sm:mb-4">Work Experience</h2>
          
          <% @experiences.each do |experience| %>
            <div class="mb-5 sm:mb-6">
              <div class="flex flex-col md:flex-row md:justify-between md:items-start">
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-800"><%= experience.position %></h3>
                  <p class="text-blue-600 font-medium text-sm sm:text-base"><%= experience.company %></p>
                </div>
                <div class="text-gray-600 text-sm mt-1 md:mt-0 md:text-right">
                  <%= experience.start_date.strftime("%m/%Y") %> - 
                  <%= experience.current ? "Present" : experience.end_date.strftime("%m/%Y") %>
                </div>
              </div>
              <div class="mt-2 text-sm sm:text-base text-gray-700">
                <%= simple_format(experience.description) %>
              </div>
            </div>
          <% end %>
        </section>

        <!-- Education -->
        <section class="mb-8 sm:mb-10">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-800 border-b-2 border-blue-200 pb-2 mb-3 sm:mb-4">Education</h2>
          
          <% @educations.each do |education| %>
            <div class="mb-5 sm:mb-6">
              <div class="flex flex-col md:flex-row md:justify-between md:items-start">
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-800"><%= education.degree %> in <%= education.field %></h3>
                  <p class="text-blue-600 font-medium text-sm sm:text-base"><%= education.institution %></p>
                </div>
                <% if education.start_date.present? && education.end_date.present? %>
                  <div class="text-gray-600 text-sm mt-1 md:mt-0 md:text-right">
                    <%= education.start_date.strftime("%Y") %> - <%= education.end_date.strftime("%Y") %>
                  </div>
                <% end %>
              </div>
              <% if education.gpa.present? %>
                <p class="text-gray-700 text-sm mt-1">GPA: <%= education.gpa %></p>
              <% end %>
              <% if education.description.present? %>
                <div class="mt-2 text-sm sm:text-base text-gray-700">
                  <%= simple_format(education.description) %>
                </div>
              <% end %>
            </div>
          <% end %>
        </section>

        <!-- Skills -->
        <section class="mb-8 sm:mb-10">
          <%= render 'shared/skills' %>
        </section>

        <!-- Languages -->
        <section>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-800 border-b-2 border-blue-200 pb-2 mb-3 sm:mb-4">Languages</h2>
          
          <div class="flex flex-wrap gap-2 sm:gap-4">
            <% @languages.each do |language| %>
              <div class="bg-gray-100 rounded-lg px-2 py-1 sm:px-4 sm:py-2">
                <span class="font-medium text-xs sm:text-sm"><%= language.name %></span>
                <span class="text-gray-600 ml-1 sm:ml-2 text-xs sm:text-sm"><%= language.proficiency %></span>
              </div>
            <% end %>
          </div>
        </section>
      </div>
    <% else %>
      <div class="p-5 sm:p-8 text-center">
        <p class="text-lg sm:text-xl text-gray-600">No profile information found. Please run the seed data to populate the resume.</p>
      </div>
    <% end %>
    
    <!-- Footer -->
    <div class="bg-gray-100 p-3 sm:p-4 text-center text-gray-600 text-xs sm:text-sm">
      <p>© <%= Date.today.year %> <%= @profile&.name || 'Resume' %> • Built with Ruby on Rails and Tailwind CSS</p>
    </div>
  </div>
</div>
